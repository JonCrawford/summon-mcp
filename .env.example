# QuickBooks OAuth Credentials
# Get these from https://developer.intuit.com/

# Method 1: Environment Variables (for local development)
# Sandbox credentials (for development/testing)
INTUIT_CLIENT_ID=your_sandbox_client_id_here
INTUIT_CLIENT_SECRET=your_sandbox_client_secret_here

# Production credentials (for live QuickBooks data)
INTUIT_CLIENT_ID_PRODUCTION=your_production_client_id_here
INTUIT_CLIENT_SECRET_PRODUCTION=your_production_client_secret_here

# Method 2: DXT Environment Variables (when packaged as DXT)
# These are automatically set by DXT from user_config in manifest.json
# QB_CLIENT_ID - Set from user_config.qb_client_id
# QB_CLIENT_SECRET - Set from user_config.qb_client_secret  
# QB_REFRESH_TOKEN - Set from user_config.qb_refresh_token (after first auth)

# Server Configuration
PORT=8080
MCP_PORT=3000

# Mock Token Broker Configuration
MOCK_BROKER_PORT=3000

# Production Mode
# Set to "true" to use production QuickBooks API and production credentials
# Set to "false" to use sandbox API and sandbox credentials (default)
QUICKBOOKS_PRODUCTION=false