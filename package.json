{
  "name": "quickbooks-mcp",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "quickbooks-mcp": "./dist/index.js"
  },
  "scripts": {
    "start": "tsx src/server.ts",
    "start:broker": "tsx src/server-broker.ts",
    "start:mock-broker": "node scripts/start-mock-broker.js",
    "setup:demo": "node scripts/setup-demo-tokens.js",
    "dev": "tsx watch src/server.ts",
    "dev:broker": "tsx watch src/server-broker.ts",
    "build": "tsc",
    "build:dxt": "npm run build && npm run package:dxt",
    "package:dxt": "node scripts/package-dxt.js",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint 'src/**/*.{ts,tsx}' --fix",
    "typecheck": "tsc --noEmit",
    "refresh-tokens": "tsx src/refresh-tokens.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "dotenv": "^17.0.1",
    "fastmcp": "^3.8.2",
    "intuit-oauth": "^4.2.0",
    "node-quickbooks": "^2.0.46",
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "@pollyjs/adapter-node-http": "^6.0.6",
    "@pollyjs/core": "^6.0.6",
    "@pollyjs/persister-fs": "^6.0.6",
    "@types/node": "^24.0.10",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "archiver": "^7.0.0",
    "eslint": "^9.30.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
